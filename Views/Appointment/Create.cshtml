@model EHRMvcCleanDemo.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<div class="container mt-4">
    <h2>Create Appointment</h2>
    <p class="text-muted">Schedule a new patient appointment</p>

    <!-- Validation Summary: Shows all validation errors at the top -->
    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

    <form asp-action="Create" method="post" class="needs-validation">
        <div class="mb-3">
            <label asp-for="PatientId" class="form-label">Patient</label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select">
                <option value="">-- Select Patient --</option>
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DoctorId" class="form-label">Doctor</label>
            <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-select">
                <option value="">-- Select Doctor --</option>
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AppointmentDate" class="form-label">Appointment Date & Time</label>
            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            <small class="form-text text-muted">Please select a future date and time.</small>
        </div>

        <div class="mb-3">
            <label asp-for="ReasonForVisit" class="form-label">Reason for Visit</label>
            <input asp-for="ReasonForVisit" class="form-control" placeholder="Enter reason (minimum 10 characters)" />
            <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
            <small class="form-text text-muted">Minimum 10 characters required.</small>
        </div>

        <div class="mb-3">
            <label asp-for="DurationMinutes" class="form-label">Duration (Minutes)</label>
            <input asp-for="DurationMinutes" type="number" class="form-control" value="30" min="15" max="180" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create Appointment</button>
            <a asp-controller="Doctor" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

